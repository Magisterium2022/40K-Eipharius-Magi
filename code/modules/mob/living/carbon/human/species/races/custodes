/datum/species/human/custodes
	name = SPECIES_CUSTODES
	name_plural = "Custodes"
	primitive_form = SPECIES_HUMAN
	brute_mod =      0.01                    //Warp Fuckery in their genes
	burn_mod =       0.01                  //Warp Fuckery in their genes
	tox_mod =       0.01    
	oxy_mod =       0.01    
	clone_mod =       0.01    
	brain_mod =       0.01    
	unarmed_types = list(/datum/unarmed_attack/stomp/astartes, /datum/unarmed_attack/kick/astartes, /datum/unarmed_attack/punch/astartes, /datum/unarmed_attack/bite/astartes)
	blurb = "The Custodes is an elite cadre of genetically-engineered transhuman warriors who are even more potent in combat than the Adeptus Astartes. They are to the Space Marines as the Emperor is to His primarchs, and it is rumoured that they were each created by the Master of Mankind personally."
	min_age = 10000
	max_age = 15000
	icon_template = 'icons/mob/human_races/r_template_tall.dmi'
	icobase = 'icons/mob/human_races/r_astartes.dmi'
	deform = 'icons/mob/human_races/r_astartes.dmi'
	damage_mask = 'icons/mob/human_races/masks/dam_mask_human.dmi'
	blood_mask = 'icons/mob/human_races/masks/blood_human.dmi'
	eye_icon_location = 'icons/mob/astartes_face.dmi'
	blood_volume = 7000 // how much blood they have
	slowdown = -3 //Increased move speed
	eye_icon = "eyes_s"
	gluttonous = GLUT_ITEM_NORMAL
	total_health = 2500 //P.S this is brain health
	appearance_flags = HAS_HAIR_COLOR | HAS_LIPS | HAS_UNDERWEAR | HAS_EYE_COLOR | HAS_A_SKIN_TONE
	mob_size = MOB_LARGE
	strength = STR_VHIGH
	flash_protection = FLASH_PROTECTION_MAJOR
	var/pain_power = 2000 //No pain.
	genders = list(MALE)
	teeth_type = /obj/item/stack/teeth/human //Teeth
	//sexybits_location = BP_GROIN 
	species_flags = SPECIES_FLAG_NO_PAIN|SPECIES_FLAG_NO_POISON|SPECIES_FLAG_NO_EMBED|SPECIES_FLAG_NO_SLIP
	inherent_verbs = list()
	H.bladder = -INFINITY
	H.bowels = -INFINITY //Custodes.
	H.thirst = INFINITY
	H.nutrition = INFINITY //he is sustained by faith alone.
	H.vice = null //off for now
	radiation_mod = 0.01
	darkness_view = 100
	see_invisible = SEE_INVISIBLE_CULT //They can see lots of stuff.
  
//gives Astartes aura
	base_auras = list(
		/obj/aura/regenerating/human/astartes
		)


/datum/species/human/astartes/handle_post_spawn(var/mob/living/carbon/human/astartes/H)
	. = ..()
	H.age = rand(min_age,max_age)
	to_chat(H, "<big><span class='warning'>You are The Emperor's most faithful! Act like it!</span></big>")
	H.update_eyes()	//hacky fix, i don't care and i'll never ever care
//	H.rejuvenate()
//	H.job = "Custodes"
//	return ..()

///mob/living/carbon/human
