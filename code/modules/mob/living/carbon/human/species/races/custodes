/mob/living/carbon/human/custodes
	gender = MALE

/mob/living/carbon/human/astartes/New(var/new_loc,var/new_custodes = SPECIES_CUSTODES)
	. = ..()
	src.rejuvenate()
	src.job = "Custodes"


/mob/living/carbon/human/custodes/Initialize()
	. = ..()
	src.rejuvenate()

	has_limbs = list(
		BP_CHEST =  list("path" = /obj/item/organ/external/chest/unbreakable/custodes),
		BP_GROIN =  list("path" = /obj/item/organ/external/groin/unbreakable/custodes),
		BP_HEAD =   list("path" = /obj/item/organ/external/head/unbreakable/custodes),
		BP_L_ARM =  list("path" = /obj/item/organ/external/arm/unbreakable/custodes),
		BP_R_ARM =  list("path" = /obj/item/organ/external/arm/right/unbreakable/custodes),
		BP_L_LEG =  list("path" = /obj/item/organ/external/leg/unbreakable/custodes),
		BP_R_LEG =  list("path" = /obj/item/organ/external/leg/right/unbreakable/custodes),
		BP_L_HAND = list("path" = /obj/item/organ/external/hand/unbreakable/custodes),
		BP_R_HAND = list("path" = /obj/item/organ/external/hand/right/unbreakable/custodes),
		BP_L_FOOT = list("path" = /obj/item/organ/external/foot/unbreakable/custodes),
		BP_R_FOOT = list("path" = /obj/item/organ/external/foot/right/unbreakable/custodes)
		)


